@using Microsoft.AspNetCore.Identity
@model TestApp.ViewModels.EditEmployeeViewModel

<div class="edit-employee__container">
    <h3>Изменение данных пользователя @Model.Employee.UserName</h3>
    <form asp-action="Edit" asp-controller="Employee">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Employee.Id" />
        <div class="form-group">
            <label asp-for="Employee.UserName" class="control-label">Логин</label>
            <input type="text" asp-for="Employee.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.first_name" class="control-label">Имя</label>
            <input type="text" asp-for="Employee.first_name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.second_name" class="control-label">Фамилия</label><br/>
            <input type="text" asp-for="Employee.second_name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.last_name" class="control-label">Отчество</label><br/>
            <input type="text" asp-for="Employee.last_name" class="form-control" />
        </div>
        <div class="form-group">
            <label class="control-label">Роли: </label><br>
            @foreach (IdentityRole role in Model.Roles)
            {
                <input type="checkbox" name="selected_roles" value="@role.Name"
                       @(Model.EmployeeRoles.Contains(role.Name) ? "checked=\"checked\"" : "") /> @role.Name <br />
            }
        </div>
        <div class="form-group">
            <label class="control-label">Должности: </label><br>
            @foreach (var position in Model.Positions)
            {
                <input type="checkbox" name="selected_positions" value="@position"
                       @(Model.EmployeePositions.Contains(position) ? "checked=\"checked\"" : "") /> @position <br />
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </form>
</div>